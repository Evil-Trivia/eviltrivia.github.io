{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'",
        ".write": "$uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'"
      }
    },
    "patreonUsers": {
      "$patreonId": {
        ".read": "root.child('users').child(auth.uid).child('patreonId').val() === $patreonId || root.child('users').child(auth.uid).child('role').val() === 'admin'",
        ".write": "false"
      }
    },
    "patreonAuthStates": {
      ".read": "false",
      ".write": "false"
    },
    "adminSettings": {
      ".read": "true",
      ".write": "root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },
    "publicQuestions": {
      ".read": true,
      ".write": false
    },
    "$other": {
      ".read": false,
      ".write": false
    }
  }
} 