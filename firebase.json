{
  "functions": {
    "source": "functions",
    "codebase": "default",
    "runtime": "nodejs18",
    "region": "us-central1",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "database": {
    "rules": "config/database.rules.json"
  },
  "hosting": {
    "public": ".",
    "rewrites": [
      {
        "source": "/auth/patreon",
        "function": "patreonAuth"
      },
      {
        "source": "/auth/patreon/**",
        "function": "patreonAuth"
      },
      {
        "source": "/webhooks/patreon",
        "function": "patreonAuth"
      },
      {
        "source": "/getCustomToken",
        "function": "patreonAuth"
      },
      {
        "source": "/account",
        "destination": "/pages/account.html"
      },
      {
        "source": "/admin",
        "destination": "/pages/admin.html"
      },
      {
        "source": "/grading",
        "destination": "/pages/grading.html"
      },
      {
        "source": "/patreon",
        "destination": "/pages/patreon.html"
      },
      {
        "source": "/partner",
        "destination": "/pages/partner.html"
      },
      {
        "source": "/search",
        "destination": "/pages/search.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**"
    ]
  }
}
