rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    // Simplified admin check - user data is in Realtime Database, not Firestore
    function isAdmin() {
      return request.auth != null && 
             request.auth.uid == 'h19MlFLygMdKES2bFVMhg2I377A3';
    }
    
    // Helper function to check if user is patron
    // Simplified patron check - user data is in Realtime Database, not Firestore  
    function isPatron() {
      return request.auth != null && 
             request.auth.uid == 'h19MlFLygMdKES2bFVMhg2I377A3';
    }
    
    // Tools collection - access via cloud functions only
    match /tools/{document=**} {
      allow read, write: if false; // Only accessible via cloud functions
    }
    
    // Migration and test collections - admin only
    match /test/{document=**} {
      allow read, write: if isAdmin();
    }
    
    match /migration-info/{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
    
    // Trivia archive - patron or admin access
    match /trivia-archive/{document=**} {
      allow read: if isPatron();
      allow write: if isAdmin();
    }
    
    // Public collections
    match /public/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Wedding data
    match /wedding/{document=**} {
      allow read, write: if true;
    }
    
    // Games data
    match /games/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Grading data
    match /grading/{document=**} {
      allow read, write: if isAdmin() || 
                         (request.auth != null && 
                          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['grader']));
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
